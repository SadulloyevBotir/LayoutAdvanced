<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="5px" android:color="#c13584" android:dashWidth="3dp" android:dashGap="3dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="60dp"/>
            <solid android:color="#707927A2" />
            <stroke android:width="10px" android:color="#833AB4" android:dashWidth="6dp" android:dashGap="5dp" />
        </shape>
    </item>

</selector>